
# /etc/ipsec.conf - strongSwan IPsec configuration file

config setup

conn %default
	ikelifetime=60m
	keylife=20m
	rekeymargin=3m
	keyingtries=1
	keyexchange=ikev2

conn example
    right=hillnetwork.ddns.net
    rightid=@hillnetwork.ddns.net
    rightsubnet=0.0.0.0/0
    rightauth=pubkey
    leftsourceip=%config
    leftauth=pubkey
    leftcert=nickcert.pem
    auto=add


conn hillnetwork
	# right = gateway
	rightsubnet=0.0.0.0/0
	right=hillnetwork.ddns.net
	rightid=@hillnetwork.ddns.net
	
	left=%any
	leftsourceip=%config
	leftcert=nickcert.pem
	leftid=nick
	auto=add

